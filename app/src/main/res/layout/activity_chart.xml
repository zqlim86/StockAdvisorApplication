<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".ChartActivity">




<!--Company Ticker Name-->

        <TextView
            android:id="@+id/textTicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="114dp"
            android:layout_marginTop="36dp"
            android:fontFamily="@font/gilroymedium"
            android:text="BBBB"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textTickerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="9dp"
            android:layout_marginTop="36dp"
            android:fontFamily="@font/gilroyregular"
            android:text="(apple Inc.)"
            android:textColor="@color/lightgrey"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/textTicker"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="36dp"
            android:background="@drawable/ic_arrowback"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


<!--Current Price & Changes-->
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/ic_arrowup"
            app:layout_constraintStart_toEndOf="@+id/currentPrice"
            app:layout_constraintTop_toBottomOf="@+id/textTickerName" />
        <TextView
            android:id="@+id/currentPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="115dp"
            android:layout_marginTop="80dp"
            android:fontFamily="@font/gilroybold"
            android:text="$200.9"
            android:textColor="@color/white"
            android:textSize="40sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/changesPercentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/gilroybold"
            android:text="4.37"
            android:textColor="@color/green"
            android:textSize="17dp"
            app:layout_constraintStart_toEndOf="@+id/currentPrice"
            app:layout_constraintTop_toBottomOf="@+id/textTickerName" />

<!--Daily High-->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardView3"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="20dp"
            app:cardBackgroundColor="@color/grey"
            app:cardCornerRadius="15dp"
            app:layout_constraintBottom_toTopOf="@+id/cardViewChart"
            app:layout_constraintStart_toStartOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/textViewHigh"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="44dp"
                            android:layout_marginTop="16dp"
                            android:fontFamily="@font/gilroysemibold"
                            android:text="High"
                            android:textColor="@color/lightgrey"
                            android:textSize="15dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/dailyHigh"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="28dp"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/gilroybold"
                            android:text="$100.98"
                            android:textColor="@color/green"
                            android:textSize="18dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textViewHigh" />


                </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

<!--Daily Low-->
        <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_marginStart="145dp"
            android:layout_marginBottom="20dp"
            app:cardBackgroundColor="@color/grey"
            app:cardCornerRadius="15dp"
            app:layout_constraintBottom_toTopOf="@+id/cardViewChart"
            app:layout_constraintStart_toStartOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/textViewLow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="44dp"
                            android:layout_marginTop="16dp"
                            android:fontFamily="@font/gilroysemibold"
                            android:text="Low"
                            android:textColor="@color/lightgrey"
                            android:textSize="15dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/dailyLow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="28dp"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/gilroybold"
                            android:text="$100.98"
                            android:textColor="@color/red"
                            android:textSize="18dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textViewLow" />


                </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

<!--Daily Volume-->
        <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="20dp"
            app:cardBackgroundColor="@color/grey"
            app:cardCornerRadius="15dp"
            app:layout_constraintBottom_toTopOf="@+id/cardViewChart"
            app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/textViewVolume"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="32dp"
                            android:layout_marginTop="16dp"
                            android:fontFamily="@font/gilroysemibold"
                            android:text="Volume"
                            android:textColor="@color/lightgrey"
                            android:textSize="15dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/dailyVolume"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/gilroybold"
                            android:text="$88888888"
                            android:textColor="@color/white"
                            android:textColorHighlight="@color/red"
                            android:textSize="18dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textViewVolume" />


                </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

<!--Chart-->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewChart"
            android:layout_width="350dp"
            android:layout_height="300dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="280dp"
            app:cardBackgroundColor="@color/grey"
            android:elevation="50dp"
            app:cardCornerRadius="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                        <com.github.mikephil.charting.charts.CombinedChart
                            android:id="@+id/combinedChart"
                            android:layout_width="310dp"
                            android:layout_height="250dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="24dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                        </com.github.mikephil.charting.charts.CombinedChart>

                </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

<!--Key Statistic-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/gilroysemibold"
            android:text="Key Statistic"
            android:textColor="@color/backgroundwhite"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardViewChart" />
        <HorizontalScrollView
            android:id="@+id/horizontalScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardViewChart"
            app:layout_constraintStart_toStartOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                        <!--Date-->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardView"
                            android:layout_width="120dp"
                            android:layout_height="100dp"
                            android:layout_marginStart="10dp"
                            app:cardBackgroundColor="@color/grey"
                            app:cardCornerRadius="15dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                        <TextView
                                            android:id="@+id/textView3"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="40dp"
                                            android:layout_marginTop="16dp"
                                            android:fontFamily="@font/gilroysemibold"
                                            android:text="Date"
                                            android:textColor="@color/lightgrey"
                                            android:textSize="15dp"
                                            app:layout_constraintStart_toStartOf="parent"
                                            app:layout_constraintTop_toTopOf="parent" />

                                        <TextView
                                            android:id="@+id/stockDate"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="8dp"
                                            android:layout_marginTop="8dp"
                                            android:fontFamily="@font/gilroybold"
                                            android:text=""
                                            android:textColor="@color/white"
                                            android:textSize="18dp"
                                            app:layout_constraintStart_toStartOf="parent"
                                            app:layout_constraintTop_toBottomOf="@+id/textView3" />


                                </androidx.constraintlayout.widget.ConstraintLayout>

                        </androidx.cardview.widget.CardView>

                        <!--Actual Close-->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardViewActual"
                            android:layout_width="120dp"
                            android:layout_height="100dp"
                            android:layout_marginStart="20dp"
                            app:cardBackgroundColor="@color/grey"
                            app:cardCornerRadius="15dp"
                            app:layout_constraintStart_toEndOf="@+id/cardView"
                            app:layout_constraintTop_toTopOf="parent">

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                        <TextView
                                            android:id="@+id/textView4"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="16dp"
                                            android:layout_marginTop="16dp"
                                            android:fontFamily="@font/gilroysemibold"
                                            android:text="Actual Close"
                                            android:textColor="@color/lightgrey"
                                            android:textSize="15dp"
                                            app:layout_constraintStart_toStartOf="parent"
                                            app:layout_constraintTop_toTopOf="parent" />

                                        <TextView
                                            android:id="@+id/actualClose"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="24dp"
                                            android:layout_marginTop="8dp"
                                            android:fontFamily="@font/gilroybold"
                                            android:text=""
                                            android:textColor="@color/white"
                                            android:textSize="18dp"
                                            app:layout_constraintStart_toStartOf="parent"
                                            app:layout_constraintTop_toBottomOf="@+id/textView4" />


                                </androidx.constraintlayout.widget.ConstraintLayout>

                        </androidx.cardview.widget.CardView>

                        <!--Predicted Close-->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardViewPredict"
                            android:layout_width="120dp"
                            android:layout_height="100dp"
                            android:layout_marginStart="20dp"
                            app:cardBackgroundColor="@color/grey"
                            app:cardCornerRadius="15dp"
                            app:layout_constraintStart_toEndOf="@id/cardViewActual"
                            app:layout_constraintTop_toTopOf="parent">

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                        <TextView
                                            android:id="@+id/textView5"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="12dp"
                                            android:layout_marginTop="16dp"
                                            android:fontFamily="@font/gilroysemibold"
                                            android:text="Predict Close"
                                            android:textColor="@color/lightgrey"
                                            android:textSize="15dp"
                                            app:layout_constraintStart_toStartOf="parent"
                                            app:layout_constraintTop_toTopOf="parent" />

                                        <TextView
                                            android:id="@+id/predictedClose"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="24dp"
                                            android:layout_marginTop="8dp"
                                            android:fontFamily="@font/gilroybold"
                                            android:text=""
                                            android:textColor="@color/white"
                                            android:textSize="18dp"
                                            app:layout_constraintStart_toStartOf="parent"
                                            app:layout_constraintTop_toBottomOf="@+id/textView5" />


                                </androidx.constraintlayout.widget.ConstraintLayout>

                        </androidx.cardview.widget.CardView>

                        <!--Average Cost-->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardViewAverage"
                            android:layout_width="120dp"
                            android:layout_height="100dp"
                            android:layout_marginStart="20dp"
                            app:cardBackgroundColor="@color/grey"
                            app:cardCornerRadius="15dp"
                            app:layout_constraintStart_toEndOf="@id/cardViewPredict"
                            app:layout_constraintTop_toTopOf="parent">

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                        <TextView
                                            android:id="@+id/avgCostTitle"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="12dp"
                                            android:layout_marginTop="16dp"
                                            android:fontFamily="@font/gilroysemibold"
                                            android:text="Average Cost"
                                            android:textColor="@color/lightgrey"
                                            android:textSize="15dp"
                                            app:layout_constraintStart_toStartOf="parent"
                                            app:layout_constraintTop_toTopOf="parent" />

                                        <TextView
                                            android:id="@+id/avgCost"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="24dp"
                                            android:layout_marginTop="8dp"
                                            android:fontFamily="@font/gilroybold"
                                            android:text=""
                                            android:textColor="@color/white"
                                            android:textSize="18dp"
                                            app:layout_constraintStart_toStartOf="parent"
                                            app:layout_constraintTop_toBottomOf="@+id/avgCostTitle" />


                                </androidx.constraintlayout.widget.ConstraintLayout>

                        </androidx.cardview.widget.CardView>

                        <!--News Sentiment-->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardViewNewsSentiment"
                            android:layout_width="120dp"
                            android:layout_height="100dp"
                            android:layout_marginStart="20dp"
                            app:cardBackgroundColor="@color/grey"
                            app:cardCornerRadius="15dp"
                            app:layout_constraintStart_toEndOf="@id/cardViewAverage"
                            app:layout_constraintTop_toTopOf="parent">

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                        <TextView
                                            android:id="@+id/newsSentimentTitle"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="16dp"
                                            android:layout_marginTop="16dp"
                                            android:fontFamily="@font/gilroysemibold"
                                            android:text="Latest News"
                                            android:textColor="@color/lightgrey"
                                            android:textSize="15dp"
                                            app:layout_constraintStart_toStartOf="parent"
                                            app:layout_constraintTop_toTopOf="parent" />

                                        <TextView
                                            android:id="@+id/newsSentiment"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="24dp"
                                            android:layout_marginTop="8dp"
                                            android:fontFamily="@font/gilroybold"
                                            android:text=""
                                            android:textColor="@color/white"
                                            android:textSize="18dp"
                                            app:layout_constraintStart_toStartOf="parent"
                                            app:layout_constraintTop_toBottomOf="@+id/newsSentimentTitle" />


                                </androidx.constraintlayout.widget.ConstraintLayout>

                        </androidx.cardview.widget.CardView>

                        <!--P/E Ratio-->
                        <androidx.cardview.widget.CardView
                            android:layout_width="120dp"
                            android:layout_height="100dp"
                            android:layout_marginStart="20dp"
                            app:cardBackgroundColor="@color/grey"
                            app:cardCornerRadius="15dp"
                            app:layout_constraintStart_toEndOf="@id/cardViewNewsSentiment"
                            app:layout_constraintTop_toTopOf="parent">

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                        <TextView
                                            android:id="@+id/peRatioTitle"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="28dp"
                                            android:layout_marginTop="16dp"
                                            android:fontFamily="@font/gilroysemibold"
                                            android:text="P/E Ratio"
                                            android:textColor="@color/lightgrey"
                                            android:textSize="15dp"
                                            app:layout_constraintStart_toStartOf="parent"
                                            app:layout_constraintTop_toTopOf="parent" />

                                        <TextView
                                            android:id="@+id/peRatio"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="36dp"
                                            android:layout_marginTop="8dp"
                                            android:fontFamily="@font/gilroybold"
                                            android:text="88.88"
                                            android:textColor="@color/white"
                                            android:textSize="18dp"
                                            app:layout_constraintStart_toStartOf="parent"
                                            app:layout_constraintTop_toBottomOf="@+id/peRatioTitle" />


                                </androidx.constraintlayout.widget.ConstraintLayout>

                        </androidx.cardview.widget.CardView>

                </androidx.constraintlayout.widget.ConstraintLayout>

        </HorizontalScrollView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/chartRecordTransactionButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/background_button3"
            android:fontFamily="@font/gilroybold"
            android:letterSpacing="0.1"
            android:text="Record transaction"
            android:textColor="@color/backgroundwhite"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView" />





</androidx.constraintlayout.widget.ConstraintLayout>



